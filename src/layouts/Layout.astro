---
interface Props {
	title: string;
}

const { title } = Astro.props;
import '../styles/global.css'
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="svg/favicon.svg" />
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
		<script src="../../public/js/masonry.js"></script>
		<script src="../../public/js/swiper.js"></script>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="word-spacing-wider">
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--bg-menu: 18, 14, 10;
		--bg-dark: 16, 12, 9;
		--white: 255, 255, 255;
		--accent: 240, 222, 180;
		--gradient-h: linear-gradient(90deg, #FEE3A5 0%, #F0DEB4 100%);
		--gradient-v: linear-gradient(180deg, #FEE3A5 0%, #F0DEB4 100%);
		--gradient-cta: linear-gradient(90deg, #F0DEB4 0%, #FCC440 100%);
	}
	html {
		font-family: 'Plus Jakarta Sans', 'Helvetica', 'Century Gothic', sans-serif;
		background: rgb(var(--bg-dark));
		scroll-behavior: smooth;
	}

</style>

